<h2>Add friends and draftable movies</h2>
<h3>Add Movies</h3>
<div id="movies-form">
	<%= form_tag("movies", remote: true, method:"post") do -%>
	<%= select_tag "movies", options_from_collection_for_select(Movie.all, :id, :title), id:'movie-select' %>
	<%= submit_tag 'Add', :class => 'btn'%>
	<% end -%>
</div>
<ul id="movies-show">
	<% @movies.each do |movie| %>
		<%= render :partial => "litem", :locals => {:item => movie.title, :id => movie.id, :kind =>'movie'} %>
	<%end%>
</ul>
<div id="players-form">
	<%= form_tag("players", remote: true, method:"post") do -%>
	<%= text_field_tag "players" %>
	<%= submit_tag 'Add', :class => 'btn'%>
	<% end -%>
</div>
<ul id="players-show">
	<% @players.each do |player| %>
		<%= render :partial => "litem", :locals => {:item => player.profile_name, :id => player.id, :kind =>'player'} %>
	<%end%>
</ul>